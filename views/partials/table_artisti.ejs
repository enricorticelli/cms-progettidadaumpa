<div class="overflow-x-auto py-8">
  <div class="flex flex-col md:flex-row items-center justify-between space-y-3 md:space-y-0 md:space-x-4 p-4">
    <div class="w-full md:w-1/2">
      <form class="flex items-center">
        <label for="simple-search" class="sr-only">Cerca</label>
        <div class="relative w-full">
          <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
            <svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
            </svg>
          </div>
          <input type="text" id="simple-search" oninput="filterArtists()" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full pl-10 p-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Cerca nome artista..." required="" />
        </div>
      </form>
    </div>

    <div class="w-full md:w-auto flex flex-col md:flex-row space-y-2 md:space-y-0 items-stretch md:items-center justify-end md:space-x-3 flex-shrink-0">
      <button type="button" class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
        <a href="./nuovo">Aggiungi artista</a>
      </button>
    </div>
  </div>
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-4 py-3">Ordine</th>
        <th scope="col" class="px-4 py-3">Nome</th>
        <th scope="col" class="px-4 py-3">Attivo</th>
        <th scope="col" class="px-4 py-3">Data creazione</th>
        <th scope="col" class="px-4 py-3">Data ultima modifica</th>
        <th scope="col" class="px-4 py-3">
          <span class="sr-only">Azioni</span>
        </th>
        <th scope="col" class="text-center px-4 py-3">Sposta</th>
      </tr>
    </thead>
    <tbody>
      <% artisti.forEach(artista => { %>
      <tr class="border-b dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600">
        <td class="px-4 py-3 flex items-center justify-center">
          <b><%= artista.ordine %></b>
        </td>
        <td scope="row" class="px-4 py-3 font-medium text-gray-900 dark:text-white">
          <%= artista.nome %>
        </td>
        <td class="px-4 py-3">
          <label title="Attiva/Disattiva" class="inline-flex items-center mb-5 cursor-pointer">
            <input type="checkbox" <%= artista.attivo ? 'checked' : '' %> onclick="toggleAttivo('<%= artista.codice %>', this.checked)" value="" class="sr-only peer">
            <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:w-5 after:h-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
            <span class="ms-3 text-sm font-medium text-gray-900 dark:text-gray-300"></span>
          </label>
        </td>

        <td class="px-4 py-3">
          <%= artista.data_aggiunta.toLocaleString() %>
        </td>
        <td class="px-4 py-3">
          <%= artista.data_modifica.toLocaleString() %>
        </td>
        <td title="Modifica" class="px-4 py-3 flex items-center justify-end">
          <button onclick="window.location.href='./<%= artista.codice %>';" id="apple-imac-27-dropdown-button" class="inline-flex items-center p-0.5 text-sm font-medium text-center rounded-lg focus:outline-none dark:text-gray-400 dark:hover:text-gray-100" type="button">
            <svg class="w-6 h-6 text-gray-500 hover:text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M18 5V4a1 1 0 0 0-1-1H8.914a1 1 0 0 0-.707.293L4.293 7.207A1 1 0 0 0 4 7.914V20a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-5M9 3v4a1 1 0 0 1-1 1H4m11.383.772 2.745 2.746m1.215-3.906a2.089 2.089 0 0 1 0 2.953l-6.65 6.646L9 17.95l.739-3.692 6.646-6.646a2.087 2.087 0 0 1 2.958 0Z" />
            </svg>
          </button>
          <button title="Elimina" onclick="salvaArtistaDaEliminare('<%= artista.codice %>')" id="apple-imac-27-dropdown-button" class="inline-flex items-center p-0.5 text-sm font-medium text-center rounded-lg focus:outline-none dark:text-gray-400 dark:hover:text-gray-100" type="button">
            <svg class="w-6 h-6 text-red-500 hover:text-red-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z" />
            </svg>
          </button>
        </td>
        <td class="px-4 py-3">
          <div class="flex items-center justify-center space-x-2">
            <!-- Move Up by One Position -->
            <!-- Move to Top -->
            <kbd title="Sposta in cima" onclick="spostaInCima('<%= artista.codice %>')" class="cursor-pointer inline-flex items-center px-2 py-1.5 text-gray-800 bg-gray-100 border border-gray-200 hover:bg-gray-200 rounded-lg dark:bg-gray-600 dark:text-gray-100 dark:border-gray-500">
              <svg class="w-2.5 h-2.5 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v13m0-13 4 4m-4-4-4 4" />
              </svg>
              <span class="sr-only">Move to Top</span>
            </kbd>
            <kbd title="Sposta su di una posizione" onclick="spostaSu('<%= artista.codice %>')" class="cursor-pointer inline-flex items-center px-2 py-1.5 text-gray-800 bg-gray-100 border border-gray-200 hover:bg-gray-200 rounded-lg dark:bg-gray-600 dark:text-gray-100 dark:border-gray-500">
              <svg class="w-2.5 h-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 10">
                <path d="M9.207 1A2 2 0 0 0 6.38 1L.793 6.586A2 2 0 0 0 2.207 10H13.38a2 2 0 0 0 1.414-3.414L9.207 1Z" />
              </svg>
              <span class="sr-only">Move Up</span>
            </kbd>
            <!-- Move Down by One Position -->
            <kbd title="Sposta giÃ¹ di una posizione" onclick="spostaGiu('<%= artista.codice %>')" class="cursor-pointer inline-flex items-center px-2 py-1.5 text-gray-800 bg-gray-100 border border-gray-200 hover:bg-gray-200 rounded-lg dark:bg-gray-600 dark:text-gray-100 dark:border-gray-500">
              <svg class="w-2.5 h-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 10">
                <path d="M15.434 1.235A2 2 0 0 0 13.586 0H2.414A2 2 0 0 0 1 3.414L6.586 9a2 2 0 0 0 2.828 0L15 3.414a2 2 0 0 0 .434-2.179Z" />
              </svg>
              <span class="sr-only">Move Down</span>
            </kbd>
            <!-- Move to Bottom -->
            <kbd title="Sposta in fondo" onclick="spostaInFondo('<%= artista.codice %>')" class="cursor-pointer inline-flex items-center px-2 py-1.5 text-gray-800 bg-gray-100 border border-gray-200 hover:bg-gray-200 rounded-lg dark:bg-gray-600 dark:text-gray-100 dark:border-gray-500">
              <svg class="w-2.5 h-2.5 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19V5m0 14-4-4m4 4 4-4" />
              </svg>

              <span class="sr-only">Move to Bottom</span>
            </kbd>
          </div>
        </td>

      </tr>
      <% }); %>
    </tbody>
  </table>

</div>