<%- include('partials/header') -%>

<div class="relative p-4 bg-white rounded-lg dark:bg-gray-800 sm:p-5">
  <form action="./<%= artista.codice %>" method="POST">
    <div class="grid gap-4 mb-6 sm:grid-cols-3">
      <div class="sm:col-span-2">
        <label for="nome" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nome</label>
        <input required type="text" name="nome" id="nome" value="<%= artista.nome %>" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Inserire del testo...">
      </div>
      <div class="sm:col-span-1">
        <label for="sito" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Sito</label>
        <input type="text" name="sito" id="sito" value="<%= artista.sito %>" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Inserire del testo...">
      </div>
      <div class="sm:col-span-3">
        <label for="sezione_2" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Titolo</label>
        <input type="text" name="sezione_2" id="sezione_2" value="<%= artista.sezione_2 %>" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Inserire del testo...">
      </div>
      <div class="sm:col-span-3">
        <label for="spettacoli" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Spettacoli</label>
        <textarea id="spettacoli" placeholder="Inserire testo..." rows="4" name="spettacoli" value="<%= artista.spettacoli %>" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"><%= artista.spettacoli %></textarea>
      </div>
      <div class="sm:col-span-3">
        <label for="descrizione" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Biografia</label>
        <textarea id="descrizione" placeholder="Inserire testo..." name="descrizione" rows="4" value="<%= artista.descrizione %>" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"><%= artista.descrizione %></textarea>
      </div>
      <div class="sm:col-span-2">
        <label for="img1" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Immagine 1</label>
        <input onclick="salvaIdImmagine(1)" data-modal-target="modal-immagini" data-modal-toggle="modal-immagini" required type="text" name="img1" id="img1" value="<%= artista.img1 %>" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Scegli immagine">
      </div>
      <div class="sm:col-span-1 flex justify-center items-center">
        <img id="imgPreview1" src="<%= artista.img1 %>" class="max-w-full h-auto max-h-24">
      </div>
      <div class="sm:col-span-2">
        <label for="img2" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Immagine 2</label>
        <input onclick="salvaIdImmagine(2)" data-modal-target="modal-immagini" data-modal-toggle="modal-immagini" required type="text" name="img2" id="img2" value="<%= artista.img2 %>" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Scegli immagine">
      </div>
      <div class="sm:col-span-1 flex justify-center items-center">
        <img id="imgPreview2" src="<%= artista.img2 %>" class="max-w-full h-auto max-h-24">
      </div>
      <div class="sm:col-span-2">
        <label for="img3" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Immagine 3</label>
        <input onclick="salvaIdImmagine(3)" data-modal-target="modal-immagini" data-modal-toggle="modal-immagini" required type="text" name="img3" id="img3" value="<%= artista.img3 %>" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Scegli immagine">
      </div>
      <div class="sm:col-span-1 flex justify-center items-center">
        <img id="imgPreview3" src="<%= artista.img3 %>" class="max-w-full h-auto max-h-24">
      </div>
      <div class="sm:col-span-2">
        <label for="img3" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Immagine 4</label>
        <input onclick="salvaIdImmagine(4)" data-modal-target="modal-immagini" data-modal-toggle="modal-immagini" required type="text" name="img4" id="img4" value="<%= artista.img4 %>" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Scegli immagine">
      </div>
      <div class="sm:col-span-1 flex justify-center items-center">
        <img id="imgPreview4" src="<%= artista.img4 %>" class="max-w-full h-auto max-h-24">
      </div>
    </div>
    <div class="mt-8 flex justify-center">
      <button type="submit" class="text-white bg-gradient-to-br from-pink-500 to-orange-400 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-pink-200 dark:focus:ring-pink-800 font-medium rounded-lg text-base px-5 py-2.5 text-center me-2 mb-2">
        <% if (editMode) { %>
        Applica modifiche
        <% } else { %>
        Aggiungi artista
        <% } %>
      </button>
    </div>
  </form>
</div>

<input type="hidden" id="idImmagine" />

<%- include('partials/modal_immagini') -%>

<script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>
<script>
  ClassicEditor
    .create(document.querySelector('#spettacoli'))
    .catch(error => {
      console.error(error);
    });

  ClassicEditor
    .create(document.querySelector('#descrizione'))
    .catch(error => {
      console.error(error);
    });
</script>


<%- include('partials/footer') -%>